<div class="container">
    <div class="row mt-5">
      <div class="col text-center">
        <h1><%= @story.title %></h1>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col text-center">
        <p><%= @story.description %></p>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col">
        <h2>Check out the story characters:</h2>
      </div>
    </div>

    <main class="row mt-3">
      <% @characters.each do |character| %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <img class="card-img-top" src="<%= character.image_url %>" alt="Graphic: <%= character.name %>" style="object-fit: fill; width: 100%; height: 200px;">
            <div class="card-body">
              <h3 class="card-title"><%= character.name %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </main>

  <footer class="row m-3">
    <div class="col text-center">
      <a href="http://marvel.com">Data provided by Marvel. Â© 2024 MARVEL</a>
    </div>
  </footer>
</div>
